# Stage 1: Build the OpenWeb UI
FROM node:lts AS builder

WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./ 
RUN npm install

# Copy the prepare-pyodide.js script to the correct location
COPY scripts/prepare-pyodide.js ./scripts/prepare-pyodide.js

# Verify that the script exists
RUN ls -la ./scripts/

# Run the pyodide:fetch script
RUN npm run pyodide:fetch

# Copy the rest of the source code
COPY . .

# Build the project
RUN npm run build

# Verify that the build was successful
RUN ls -la ./build || echo "dist directory not found"

# Stage 2: Serve with Nginx
FROM nginx:alpine

# Copy built files from the builder stage
COPY --from=builder /app/build /usr/share/nginx/html

# Copy custom Nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Start Nginx
CMD ["nginx", "-g", "daemon off;"]